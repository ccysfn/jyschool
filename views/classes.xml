<odoo>
  <data>
    <record id="classes_tree" model="ir.ui.view">
            <field name="name">教室</field>
            <field name="model">jyschool.classes</field>
            <field name="type">tree</field>
            
            <field name="arch" type="xml">
                <tree string="教室" >
               <field name="name"/>
              
                </tree>
            </field>
        </record>
        <record id="classes_form" model="ir.ui.view">
            <field name="name">教室</field>
            <field name="model">jyschool.classes</field>
            <field name="type">form</field>
            
            <field name="arch" type="xml">
                <form string="教室" >
                    <sheet>
                    <group>
               <field name="name"/>
              
                    </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="classes_action" model="ir.actions.act_window">
            <field name="name">教室</field>
            <field name="res_model">jyschool.classes</field>
            
            <field name="view_mode">tree,form</field>
           

        </record>

        <menuitem action="classes_action" id="classes" name="教室" parent="parent_menu_2"  sequence="10"/>
     
        
  </data>
</odoo>